!-------------------------------------------------
! Xft settings
!
Xft.antialias:          true
Xft.rgba:               rgb
Xft.hinting:            true
Xft.hintstyle:          hintslight

!-------------------------------------------------
! URxvt settings
!
! URxvt.depth:            32
! URxvt.geometry:         60x20
URxvt.fading:           0
! URxvt.urgentOnBell:     true
URxvt.visualBell:       true
URxvt.loginShell:       true
URxvt.saveLines:        50
URxvt.internalBorder:   3
URxvt.lineSpace:        0

! Fonts
URxvt.allow_bold:       false
URxvt.font: xft:Ricty Diminished:size=12:antialias=true, xft:Unifont, xft:Unifont Upper
! Fix font space
! URxvt*letterSpace:      -1

! Scrollbar
URxvt.scrollStyle:      rxvt
URxvt.scrollBar:        false

! Cursor
URxvt.cursorBlink:      true
URxvt.cursorColor:      #657b83
URxvt.cursorUnderline:  false

! Pointer
URxvt.pointerBlank:     false

! Transparency
URxvt.transparent:      true
URxvt.shading:          10
! URxvt*inheritPixmap:    true

! Colors
! Jellybeans Terminal Colours
URxvt*background: #080808
URxvt*foreground: #808080
! black
URxvt*color0:     #1a1a1a
URxvt*color8:     #404040
! red
URxvt*color1:     #d75f5f
URxvt*color9:     #ea8484
! green
URxvt*color2:     #87af5f
URxvt*color10:    #c7f09f
! yellow
URxvt*color3:     #ffaf5f
URxvt*color11:    #ffcc9a
! blue
URxvt*color4:     #87afd7
URxvt*color12:    #a5caef
! magenta
URxvt*color5:     #8787af
URxvt*color13:    #a6a6de
! cyan
URxvt*color6:     #5f8787
URxvt*color14:    #69b2b2
! white
URxvt*color7:     #808080
URxvt*color15:    #d7d7d7
