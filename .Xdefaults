!-------------------------------------------------
! Xft settings
!
Xft.antialias:          true
Xft.rgba:               rgba
Xft.hinting:            true
Xft.hintstyle:          hintslight

!-------------------------------------------------
! URxvt settings
!
! URxvt.depth:            32
! URxvt.geometry:         60x20
URxvt.fading:           0
! URxvt.urgentOnBell:     true
URxvt.visualBell:       true
URxvt.loginShell:       true
URxvt.saveLines:        50
URxvt.internalBorder:   3
URxvt.lineSpace:        0

! Fonts
URxvt.allow_bold:       false
URxvt.font: xft:RictyDiminished Nerd Font Mono:style=Regular:size=12:antialias=true
! Fix font space
! URxvt*letterSpace:      -1

! Scrollbar
URxvt.scrollStyle:      rxvt
URxvt.scrollBar:        false

! Cursor
URxvt.cursorBlink:      true
URxvt.cursorColor:      #b0d0f0
URxvt.cursorUnderline:  false

! Pointer
URxvt.pointerBlank:     false

! Transparency
URxvt.transparent:      true
URxvt.shading:          10
! URxvt*inheritPixmap:    true

! Colors
! Jellybeans Terminal Colours
URxvt*background: #151515
URxvt*foreground: #e8e8d3
! black
URxvt*color0:     #151515
URxvt*color8:     #666656
! red
URxvt*color1:     #cf6a4c
URxvt*color9:     #f0a0c0
! green
URxvt*color2:     #99ad6a
URxvt*color10:    #c3e6ad
! yellow
URxvt*color3:     #ffb964
URxvt*color11:    #fad07a
! blue
URxvt*color4:     #8197bf
URxvt*color12:    #8fbfdc
! magenta
URxvt*color5:     #c6b6ee
URxvt*color13:    #fbdaff
! cyan
URxvt*color6:     #5f8787
URxvt*color14:    #69b2b2
! white
URxvt*color7:     #a8a897
URxvt*color15:    #e8e8d3
